<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- For logged in customer -->
    <route url="/V1/carts/mine/request-calendar-rates" method="POST">
        <service class="ShipperHQ\Calendar\Api\DateShippingManagementInterface" method="requestRates"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <!-- For guests -->
    <route url="/V1/guest-carts/:cartId/guestrequest-calendar-rates" method="POST">
        <service class="ShipperHQ\Calendar\Api\GuestDateShippingManagementInterface" method="requestRates"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
