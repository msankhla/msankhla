<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="corralog">
        <job name="corra_log_archive_refresh" instance="Corra\Log\Model\ResourceModel\LogArchiveRefresher"
             method="refresh">
            <schedule>0 3 * * *</schedule>
        </job>
        <job name="corra_log_archive_process_alerts" instance="Corra\Log\Model\ResourceModel\AlertDigestEmailSender"
             method="processAlerts">
            <schedule>* * * * *</schedule>
        </job>
    </group>
</config>