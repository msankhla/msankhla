            <group id="email_alerts" translate="label" type="text" sortOrder="10"
                   showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Email Alerts</label>
                <field id="digest_email_from" translate="label" type="select" sortOrder="1"
                       showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Digest Emails Sender</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                </field>
                <field id="digest_emails_to" translate="label comment" type="textarea" sortOrder="1"
                       showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Digest Emails To</label>
                    <comment>List of emails, comma-separated.</comment>
                    <validate>validate-emails</validate>
                </field>
                <field id="send_by_type_subtype" translate="label" type="select" sortOrder="10"
                       showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Separate emails by type and subtypes</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="emergency_period" translate="label comment" type="text" sortOrder="1"
                       showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Emergency Digest Period</label>
                    <comment>Aggregate alerts for specified amount of minutes.</comment>
                    <validate>integer validate-greater-than-zero</validate>
                </field>
                <field id="alert_period" translate="label comment" type="text" sortOrder="1"
