<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/fdxcb/order-creator" method="PUT">
        <service class="FedEx\CrossBorder\Api\OrderManagementInterface" method="create"/>
        <resources>
            <resource ref="Magento_Sales::create" />
        </resources>
    </route>

    <route url="/V1/fdxcb/order/status" method="POST">
        <service class="FedEx\CrossBorder\Api\OrderStatusManagementInterface" method="update"/>
        <resources>
            <resource ref="Magento_Sales::create" />
        </resources>
    </route>

    <route url="/V1/fdxcb/order/status/ready-for-export" method="POST">
        <service class="FedEx\CrossBorder\Api\OrderStatusManagementInterface" method="readyForExport"/>
        <resources>
            <resource ref="Magento_Sales::create" />
        </resources>
    </route>

    <route url="/V1/fdxcb/store/configs" method="GET">
        <service class="FedEx\CrossBorder\Api\StoreConfigManagementInterface" method="getStoreConfigs"/>
        <resources>
            <resource ref="Magento_Backend::store"/>
        </resources>
    </route>
</routes>
