<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Quote\Api\Data\CartInterface">
        <attribute code="fdxcb_data" type="FedEx\CrossBorder\Api\Data\QuoteLinkInterface">
            <join reference_table="fdxcb_quote" reference_field="quote_id" join_on_field="entity_id">
                <field>quote_id</field>
                <field>fxcb_order_number</field>
                <field>tracking_link</field>
            </join>
        </attribute>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="fdxcb_data" type="FedEx\CrossBorder\Api\Data\OrderLinkInterface">
            <join reference_table="fdxcb_sales_order" reference_field="order_id" join_on_field="entity_id">
                <field>order_id</field>
                <field>fxcb_order_number</field>
                <field>tracking_link</field>
                <field>fxcb_status</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
