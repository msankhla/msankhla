<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales" title="Sales" translate="title" sortOrder="20">
                    <resource id="Magento_Sales::sales_operation" title="Operations" translate="title" sortOrder="10">
                        <resource id="Magento_Sales::sales_order"  title="Orders" translate="title" sortOrder="10">
                            <resource id="Magento_Sales::actions" title="Actions" translate="title" sortOrder="10">
                                <resource id="FedEx_CrossBorder::pack_notification" title="Create Pack Notification" translate="title" sortOrder="160" />
                            </resource>
                        </resource>
                        <resource id="FedEx_CrossBorder::pack_notifications"   title="Pack Notifications" translate="title" sortOrder="80" />
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="FedEx_Core::All">
                                <resource id="FedEx_CrossBorder::config" title="FedEx Cross Border" />
                            </resource>
                        </resource>
                    </resource>
                    <resource id="FedEx_CrossBorder::menu" title="FedEx Cross Border">
                        <resource id="FedEx_CrossBorder::scheduler" title="API Scheduler"  sortOrder="10" />
                        <resource id="FedEx_CrossBorder::available_countries" title="Available Countries"  sortOrder="20" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
