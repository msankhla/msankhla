<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="fedex_bluesnap" type="host">*.bluesnap.com</value>
                <value id="fedex_cardinalcommerce" type="host">*.cardinalcommerce.com</value>
                <value id="fedex_crossborder" type="host">*.crossborder.fedex.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="fedex_cardinalcommerce" type="host">*.cardinalcommerce.com</value>
                <value id="fedex_crossborder" type="host">*.crossborder.fedex.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="fedex_bluesnap" type="host">*.bluesnap.com</value>
                <value id="fedex_crossborder" type="host">*.crossborder.fedex.com</value>
                <value id="fedex_tst_kaptch" type="host">tst.kaptcha.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="fedex_bluesnap" type="host">*.bluesnap.com</value>
                <value id="fedex_crossborder" type="host">*.crossborder.fedex.com</value>
                <value id="fedex_tst_kaptch" type="host">tst.kaptcha.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="fedex_unpkg" type="host">unpkg.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="data" type="host">data:</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
