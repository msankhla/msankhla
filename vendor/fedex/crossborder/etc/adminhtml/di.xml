<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool" type="Magento\Ui\DataProvider\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="fdxcb_carton" xsi:type="array">
                    <item name="class" xsi:type="string">FedEx\CrossBorder\Ui\DataProvider\Product\Form\Modifier\CartonData</item>
                    <item name="sortOrder" xsi:type="number">200</item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Catalog\Controller\Adminhtml\Product\Save">
        <plugin name="fedex-crossborder-controller-product-save-plugin" type="FedEx\CrossBorder\Plugin\Catalog\Controller\Adminhtml\Product\SavePlugin" />
    </type>

    <type name="Magento\Sales\Block\Adminhtml\Order\View">
        <plugin name="fedex-crossborder-sales-order-view" type="FedEx\CrossBorder\Plugin\Sales\Block\Order\ViewPlugin" />
    </type>
</config>