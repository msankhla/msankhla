<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="FedEx\CrossBorder\Block\Checkout\Link" name="checkout.cart.methods.fedex.crossborder.link" template="FedEx_CrossBorder::checkout/link.phtml"/>
        </referenceContainer>
        <referenceBlock name="checkout.cart.shipping">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-summary" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="block-shipping" xsi:type="array">
                                    <item name="component" xsi:type="string">FedEx_CrossBorder/js/view/cart/shipping-estimation</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">FedEx_CrossBorder/cart/shipping-estimation</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="tax" xsi:type="array">
                                    <item name="component" xsi:type="string">FedEx_CrossBorder/js/view/checkout/cart/totals/tax</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
