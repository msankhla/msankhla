<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <columns name="sales_order_columns">
        <column name="fxcb_order_number">
            <settings>
                <filter>text</filter>
                <label translate="true">FedEx Order Number</label>
            </settings>
        </column>
        <column name="fxcb_status" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options class="FedEx\CrossBorder\Ui\Component\Order\Listing\Column\Status\Options"/>
                <dataType>select</dataType>
                <label translate="true">FedEx Status</label>
            </settings>
        </column>
    </columns>
</listing>